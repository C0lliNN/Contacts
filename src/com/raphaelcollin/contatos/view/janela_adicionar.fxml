<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>

<GridPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
          fx:id="gridPane" fx:controller="com.raphaelcollin.contatos.controller.ControllerAdicionar" alignment="TOP_CENTER"
          vgap="10" hgap="10">

    <padding>
        <Insets top="20" bottom="20" left="40" right="40"/>
    </padding>
    <stylesheets> <!-- Inclusao do CSS -->
        <URL value="@/com/raphaelcollin/contatos/estilo.css"/>
    </stylesheets>

        <!-- Imagem -->

    <ImageView fx:id="imageView" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.columnSpan="3"/>

            <!-- Nome -->

    <Label onMouseClicked="#handleLabelClick" fx:id="labelNome" text="Nome:" GridPane.rowIndex="1" GridPane.columnIndex="0">
        <font>
            <Font name="Arial" size="24"/>
        </font>
    </Label>

    <TextField fx:id="nomeField" styleClass="adicionar-field" promptText="Nome do Contato"
               GridPane.rowIndex="1" GridPane.columnIndex="1">
        <font>
            <Font name="Arial" size="24"/>
        </font>
    </TextField>

        <!-- Numero -->

    <Label onMouseClicked="#handleLabelClick" fx:id="labelNumero" text="Número:" GridPane.rowIndex="2" GridPane.columnIndex="0">
        <font>
            <Font name="Arial" size="24"/>
        </font>
    </Label>

    <TextField fx:id="numeroField" styleClass="adicionar-field" promptText="Número do Contato" GridPane.rowIndex="2"
               GridPane.columnIndex="1">
        <font>
            <Font name="Arial" size="24"/>
        </font>
    </TextField>

        <!-- E-mail -->

    <Label onMouseClicked="#handleLabelClick" fx:id="labelEmail" text="E-mail:" GridPane.rowIndex="3" GridPane.columnIndex="0">
        <font>
            <Font name="Arial" size="24"/>
        </font>
    </Label>

    <TextField fx:id="emailField" styleClass="adicionar-field" promptText="exemplo@exemplo.com" GridPane.rowIndex="3"
               GridPane.columnIndex="1">
        <font>
            <Font name="Arial" size="24"/>
        </font>
    </TextField>

        <!-- Descricao -->

    <Label fx:id="labelDescricao" text="Descrição: (Opcional)" GridPane.rowIndex="4" GridPane.columnIndex="0"
           GridPane.columnSpan="2">
        <font>
            <Font name="Arial" size="24"/>
        </font>
    </Label>

    <TextArea wrapText="true" fx:id="descricaoField" promptText="Descreva o Contato" GridPane.rowIndex="5"
              GridPane.columnIndex="0" GridPane.columnSpan="2">
        <font>
            <Font name="Arial" size="24"/>
        </font>
    </TextArea>

        <!-- Botoes -->

    <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.columnSpan="2">

        <Button defaultButton="true" onAction="#handleAdicionar" id="adicionar-button" text="Adicionar">
            <font>
                <Font name="Arial" size="24"/>
            </font>
        </Button>
        <Button onAction="#handleVoltar" id="cancelar-button" text="Voltar">
            <font>
                <Font name="Arial" size="24"/>
            </font>
        </Button>

    </HBox>

</GridPane>
