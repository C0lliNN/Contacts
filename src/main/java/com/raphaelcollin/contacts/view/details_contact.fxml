<GridPane fx:id="root" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.raphaelcollin.contacts.controller.ControllerContactDetails" alignment="TOP_CENTER">

    <HBox alignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2">
        <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
            <Button fx:id="backButton" onAction="#handleBack"/>
        </HBox>
        <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
            <Button fx:id="iconContactButton"/>
        </HBox>
        <HBox HBox.hgrow="ALWAYS">
            <Button text="Test" opacity="0.0"/>
        </HBox>

    </HBox>

    <GridPane hgap="30" alignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2">
        <Button text="%add_contact_clearButton_text" fx:id="clearButton" onAction="#handleClear"
                GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.hgrow="NEVER"/>

        <Button text="%contact_details_save_button_text" fx:id="saveButton" onAction="#handleSave" defaultButton="true"
                GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.hgrow="NEVER" />

    </GridPane>


</GridPane>
