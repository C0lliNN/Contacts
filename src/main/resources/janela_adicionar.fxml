<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.ToggleGroup?>
<?import com.jfoenix.controls.JFXRadioButton?>
<?import com.jfoenix.controls.JFXButton?>

<GridPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
          fx:id="gridPane" fx:controller="com.raphaelcollin.contatos.controller.ControllerAdicionar" alignment="TOP_CENTER"
          vgap="20" hgap="10">

    <padding>
        <Insets top="20" bottom="20" right="50" left="50"/>
    </padding>
    <stylesheets> <!-- Inclusao do CSS -->
        <URL value="@estilo.css"/>
    </stylesheets>

        <!-- Imagem -->

    <HBox alignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2">
        <ImageView fx:id="imageView"/>
    </HBox>


            <!-- Nome -->

    <Label text="Nome:" fx:id="labelNome" onMouseClicked="#handleLabelClick"
           GridPane.rowIndex="1" GridPane.columnIndex="0">
        <font>
            <Font name="Arial" size="24"/>
        </font>
    </Label>

    <TextField promptText="Nome do Contato" fx:id="nomeField" styleClass="adicionar-field"
               GridPane.rowIndex="1" GridPane.columnIndex="1">
        <font>
            <Font name="Arial" size="24"/>
        </font>
    </TextField>

    <Label text="Sexo:" GridPane.rowIndex="2" GridPane.columnIndex="0">
        <font>
            <Font name="Arial" size="24"/>
        </font>
    </Label>

    <!-- Toggle Group -->

    <fx:define>
        <ToggleGroup fx:id="radioGroup"/>
    </fx:define>

    <!-- Radio Buttons-->

    <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="1">
        <JFXRadioButton text="Masculino" selected="true" toggleGroup="$radioGroup">
            <font>
                <Font name="Arial" size="20"/>
            </font>
        </JFXRadioButton>
        <JFXRadioButton text="Feminino" toggleGroup="$radioGroup">
            <font>
                <Font name="Arial" size="20"/>
            </font>
        </JFXRadioButton>
    </HBox>

        <!-- Numero -->

    <Label text="Número:" fx:id="labelNumero" onMouseClicked="#handleLabelClick"   GridPane.rowIndex="3"
           GridPane.columnIndex="0">
        <font>
            <Font name="Arial" size="24"/>
        </font>
    </Label>

    <TextField promptText="Número do Contato" fx:id="numeroField" styleClass="adicionar-field" GridPane.rowIndex="3"
               GridPane.columnIndex="1">
        <font>
            <Font name="Arial" size="24"/>
        </font>
    </TextField>

        <!-- E-mail -->

    <Label text="E-mail:" fx:id="labelEmail" onMouseClicked="#handleLabelClick" GridPane.rowIndex="4"
           GridPane.columnIndex="0">
        <font>
            <Font name="Arial" size="24"/>
        </font>
    </Label>

    <TextField promptText="exemplo@exemplo.com" fx:id="emailField" styleClass="adicionar-field" GridPane.rowIndex="4"
               GridPane.columnIndex="1">
        <font>
            <Font name="Arial" size="24"/>
        </font>
    </TextField>

        <!-- Descricao -->

    <Label text="Descrição: (Opcional)" fx:id="labelDescricao" GridPane.rowIndex="5" GridPane.columnIndex="0"
           GridPane.columnSpan="2">
        <font>
            <Font name="Arial" size="24"/>
        </font>
    </Label>

    <TextArea promptText="Descreva o Contato" wrapText="true" fx:id="descricaoField" GridPane.rowIndex="6"
              GridPane.columnIndex="0" GridPane.columnSpan="2">
        <font>
            <Font name="Arial" size="24"/>
        </font>
    </TextArea>

        <!-- Botoes -->

    <GridPane GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.columnSpan="2" alignment="CENTER">

        <JFXButton text="Voltar" fx:id="voltarButton" styleClass="orange-button" onAction="#handleVoltar"
                   onMouseEntered="#handleMouseEntered" onMouseExited="#handleMouseExited"
                   GridPane.rowIndex="0" GridPane.columnIndex="0"/>

        <JFXButton text="Adicionar" fx:id="adicionarButton" defaultButton="true" styleClass="blue-button"
                   onAction="#handleAdicionar" onMouseEntered="#handleMouseEntered" onMouseExited="#handleMouseExited"
                   GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <BorderPane.margin>
            <Insets top="20"/>
        </BorderPane.margin>

    </GridPane>

</GridPane>
